<body>
	<div id="root" class="text-center">
		<h1 class="page-header " style="font-family:Palatino;">Register</h1>
		{{#if message}}
			<div class="alert alert-danger" role="alert">{{message}}</div>
		{{/if}}
		<form role="form" method="post" action="/user/addUser">

			<h4>Email:<br><input type="text" style="height:40px; border-color: black; background-color: transparent; border-radius:10px; text-align: center;"  class="larger" name="email" required id="email" minlength="6">*</h4><br>
			<h4>Password:<br><input type="password" style="height:40px; border-color: black; background-color: transparent; border-radius:10px; text-align: center;" class="larger" name="password" required id="password" minlength="6">*</h4><br>
			<input type="hidden" name="_csrf" value="{{csrfToken}}">
			<input type="submit" class="btn btn-dark" style="font-weight: bold; color:white;" id="register">
		</form>
					<a href="/" class="btn btn-outline" style="font-weight: bold; color:black; margin-top: 1vh" role="button">Back</a>
				</div>


</body>
