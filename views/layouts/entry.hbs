    <link href="/scripts/rateit.css" rel="stylesheet">
  <body>

<div class="text-center">
    <h1 >Log Your Meal</h1><br>
    <h4 class="help-block" id="clock" ></h4>

    <form id="addDiary" role="form" method="post" action="/addDiary/ne">
      <input type="file" accept="image/*" id="file-input" capture="environment"/><br>
       <canvas id="canvas" width="400" height="400" style="border:1px solid #000000;"></canvas>

       <img id="hello">
        <br>
        <textarea style="border-radius:10px;" width="20vw" height="20vh"
           placeholder="Comments: I had a really good time with friends eating this wonderful brunch." name="comments" id="comments"></textarea>
        <br>
         <br/>

        <hr>
     <div class="container"  id="Rating" >
       <text class="Text-input">Taste:</text><br/>
       <div class="rateit" id="tasteRate" data-rateit-mode="font"  style="font-size:50px">
      </div>
      <input type="hidden" name="taste" id="taste" value="0" />
     <hr class="rating-hr">
        <text class="Text-input">Health:</text><br/>
        <div class="rateit" id="healthRate" data-rateit-mode="font"  style="font-size:50px">
       </div>
       <input type="hidden" name="health" value="0" id="health"/>
      <hr class="rating-hr">
       <text class="Text-input">Mood:</text><br/>
       <div class="rateit" id="moodRate" data-rateit-mode="font"  style="font-size:50px">
       </div>
       <input type="hidden" name="mood" value="0"  id="mood"/>
      <hr class="rating-hr">
        <text class="Text-input">Anxiety:</text><br/>
        <div class="rateit" id="anxietyRate" data-rateit-mode="font"  style="font-size:50px">
        </div>
        <input type="hidden" name="anxiety" value="0" id="anxiety"/>
      <hr class="rating-hr">
      <input type="hidden" name="dataURL" id="dataURL" value="" />
        <input type="hidden" name="date" id="date" value=""/>
     </div>
     <a href="/index" class="btn btn-dark" style="float:left; margin-left:36px; " role="button" id="entryBackBtn">Back</a>
     <input type="submit" class="btn  entry2BackNext btn-primary" style="float:right; font-weight: bold; color:white; margin-right: 36px;" id="addEntry" value="Add to Diary  â‡¨" />
      </form>
    </div>
</div>
