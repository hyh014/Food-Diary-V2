	<fieldset>
	<a href="/user/logout" class="text-center btn btn-info " style="font-size:16px; padding:2px;margin-top:20px; margin-left:145px; ; width:100px;" onclick="clicked(event);" role="button" id="logoff">Log Off</a>

</fieldset>
	<form>
		<fieldset>
			<h3>Notifications:</h2><hr>
				<div class="settingStyle1">
				<div id="Location">
					<h4>Allow Location</h4>
					<label for="location"></label>
					<label class="switch">
		  			<input type="checkbox">
		  			<span class="slider round"></span>
					</label><br>
				</div>
			</div>
			<div class="settingStyle1" >
				<div id="camera">
					<h4>Allow Camera</h4>
					<label for="camera"></label>
					<label class="switch">
				  	<input type="checkbox">
